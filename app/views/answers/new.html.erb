<%= @question.content %><br>
<%= form_for @answer do |f| %>
    <%= f.text_area :content %> <br>
    <%= f.hidden_field :question_id, :value => @question.id %>
    <%= f.hidden_field :user_id, :value => current_user.id %>    
    <%= f.submit "Edit Answer!" %>
<% end %>
